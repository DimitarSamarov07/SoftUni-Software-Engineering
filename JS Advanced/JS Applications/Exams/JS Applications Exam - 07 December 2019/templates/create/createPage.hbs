{{> header}}
<form class="create-trek" action="#/create" id="createForm" method="post">
    <div class="text-center mb-4">
        <h1 class="h3 mb-3 font-weight-normal">Wish for a new adventure!</h1>
        <p>Fill up the following information!</p>
    </div>

    <div class="form-label-group">
        <label for="inputTrekName"></label>
        <input  type="text" name="location" class="form-control" placeholder="Location" required="" autofocus="">
    </div>

    <div class="form-label-group">
        <label for="inputTrekDate"></label>
        <input type="text"  name="dateTime" class="form-control" placeholder="Date" required="">
    </div>

    <div class="form-label-group">
        <label for="inputTrekDescription"></label>
        <textarea type="text"  name="description" class="form-control" placeholder="Description" required=""></textarea>
    </div>

    <div class="form-label-group">
        <label for="inputTrekImage"></label>
        <input type="text"  name="imageUrl" class="form-control" placeholder="Image" required="" autofocus="">
    </div>

    <button class="btn btn-lg btn-dark btn-block" type="submit">Make a wish =)</button>
</form>

{{> footer}}