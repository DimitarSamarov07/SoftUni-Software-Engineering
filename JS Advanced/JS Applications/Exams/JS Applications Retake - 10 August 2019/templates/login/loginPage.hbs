{{> header}}
<div style="margin: 7% auto 5%;" class="modal-content col-lg-6">
    <div class="card-body">
        <form method="POST" id="loginForm" action="#/login">
            <p class="h4 py-4">Login</p>
            <hr>
            <label for="defaultFormCardNameEx" class="grey-text font-weight-light">Your username</label>
            <input name="username" type="text" id="defaultFormCardNameEx" class="form-control">

            <br>

            <label for="defaultFormCardPasswordEx" class="grey-text font-weight-light">Your password</label>
            <input name="password" type="password" id="defaultFormCardPasswordEx" class="form-control">

            <div class="text-center py-4 mt-3">
                <button class="btn btn-info" type="submit">Log In</button>
            </div>
        </form>

    </div>

</div>
{{> footer}}