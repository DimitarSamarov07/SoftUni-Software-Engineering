<form action="#/edit/{{teamId}}" method="post" id="editForm">
    <div class="form-group">
        <label for="name">New Team Name:</label>
        <input class="form-control" type="text" id="name" name="name" value="{{name}}"/>
    </div>
    <div class="form-group">
        <label for="description">New Team Comment/Description: </label>
        <input class="form-control" type="text" id="description" name="description" value="{{description}}"/>
    </div>
    <input class="btn btn-default" type="submit" value="Update Team"/>
</form>