<form class="text-center border border-light p-5" action="/create" method="POST">
    <h1>Create Course</h1>
    <div class="form-group">
        <label for="title">Title</label>
        <input type="text" class="form-control" id="title" placeholder="Course name" name="title" value="{{title}}">
    </div>
    <div class="form-group">
        <label for="description">Description</label>
        <textarea class="form-control" placeholder="Description" id="description"
                  name="description">{{description}}</textarea>
    </div>
    <div class="form-group">
        <label for="imageUrl">Image url</label>
        <input type="text" class="form-control" placeholder="Image Url" id="imageUrl" name="imageUrl"
               value="{{imageUrl}}">
    </div>
    <div class="form-group">
        <label for="duration">Duration</label>
        <input type="text" class="form-control" placeholder="4 weeks" id="duration" name="duration"
               value="{{duration}}">
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
</form>
