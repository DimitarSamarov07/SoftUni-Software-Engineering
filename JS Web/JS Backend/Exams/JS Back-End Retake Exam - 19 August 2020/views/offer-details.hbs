<div class="offer-details">
    <h1>{{name}}</h1>
    <div class="info">
        <img src="{{imageUrl}}"
             alt="">
        <div class="description">{{description}}
            <br>
            <br>
            <p><strong>Buyers:</strong> {{buyersCount}}</p>
            <br>
            <p class="price">${{price}}</p>
        </div>
    </div>
    <div class="actions">
        {{#if isCreator}}
            <a href="/edit/{{_id}}">Edit</a>
            <a href="/delete/{{_id}}">Delete</a>
        {{else}}
            {{#unless isPurchased}}
                <a href="/buy/{{_id}}">Buy</a>
            {{else}}
                <span>You bought it</span>
            {{/unless}}
        {{/if}}
    </div>
</div>